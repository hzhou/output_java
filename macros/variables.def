subcode:: java_parse
    $elif $l=~/^(\w+)\s*=\s*new\s*(\w+)\s*(.*)\s*;?/
        my ($v, $cls, $p)=($1, $2, $3)
        my $type = $cls
        $if $p=~/<(.*?)>(.*)/
            $type = "$cls<$1>"
            $cls = "$cls<>"
            $p = $2
        $elif $p=~/\[(.*?)\](.*)/
            $type = "$cls"."[]"
        $(super:auto_add_var)($v, $type)

        $if !$p
            push @$out, "$v = new $cls();"
        $elif $p=~/^\((.*)\)/
            push @$out, "$v = new $cls$p;"
        $elif $p=~/^\[(.*)\]/
            push @$out, "$v = new $cls$p;"
        $else
            push @$out, "$v = new $cls($p);"

        $if $common_classes{$cls}
            add_import($common_classes{$cls})

        return

subcode: _autoload
    $global %common_classes
    %common_classes=(
        Random => "java.util.Random",
        "ArrayList<>" => "java.util.*",
    );

