subcode: animate(millisec, delay)
    $import javax.swing.Timer
    # $implements ActionListener
    $private Timer timer

    timer=new Timer($(millisec), new ActionListener(){
        public void actionPerformed(ActionEvent evt){
            $in_function
                BLOCK
        }
    });
    $(if:delay>0)
        timer.setInitialDelay($(delay))
    timer.start()

