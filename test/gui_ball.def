include: java/awt.def

page: test, gui_frame
    module: java

    $private n_w, n_h = 800, 600
    $private n_r = 100
    $private i_x, i_y =  n_r, n_r
    $private n_dx, n_dy = 1, 1

    &call animate, 20
        i_x+=n_dx
        i_y+=n_dy
        $if i_x+n_r>n_w || i_x-n_r<0
            n_dx = -n_dx
        $if i_y+n_r>n_h || i_y-n_r<0
            n_dy = -n_dy

    setTitle("Test Paint");
    setSize(n_w, n_h);
    setVisible(true);

fncode: paint(Graphics g)
    super.paint(g)

    g.setColor(Color.blue);
    g.fillOval(i_x-n_r, i_y-n_r, n_r*2, n_r*2); 
