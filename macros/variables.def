subcode:: java_parse
    $elif $l=~/^(\w+)\s*=\s*(new\s+.*)/
        my ($name, $val) = ($1, $2)
        my $type
        $call guess_type_from_new
        $(super:auto_add_var)($name, $type)
        $if $val=~/{\s*$/
            push @$out, "$name = $val"
        $else
            push @$out, "$name = $val;"
        return

subcode: _autoload
    $global %common_classes
    %common_classes=(
        Random => "java.util.Random",
        "ArrayList<>" => "java.util.*",
    );

