# basic_frame for console prog, gui_frame for awt prog
#   Single class library don't need use frame

#----------------------------------------
subcode: basic_frame
    $list _basic_main

fncode: _basic_main(main)
    $skip_autolist
    $call main2

#----------------------------------------
subcode: input(@file)
    $import java.io.*
    try{
        $(if:file=)
            $(set:in=new InputStreamReader(System.in))
        $(else)
            $(set:in=new FileReader($(file)))
        $local BufferedReader In = new BufferedReader($(in))
        BLOCK
    }
    catch(Exception e){
    }

    subcode: get_s
        s = In.readLine()

subcode: scanner
    $import java.io.*
    $import java.util.Scanner
    try{
        scanner = new Scanner(new BufferedReader(new InputStreamReader(System.in)))
        BLOCK
    }
    finally{
        $if scanner != null
            scanner.close()
    }

#----------------------------------------
macros:
    atoi: Integer.parseInt($1)
    atof: Double.parseDouble($1)

    itoa: Integer.toString($1)


